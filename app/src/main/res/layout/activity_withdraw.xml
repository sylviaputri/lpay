<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/txtWithdrawBack"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background"
                app:srcCompat="?attr/actionModeCloseDrawable" />

            <TextView
                android:id="@+id/txtWithdrawTitle"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:paddingTop="12dp"
                android:text="Withdraw"
                android:textAlignment="inherit"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="visible"
            android:background="#AAA" />

        <TextView
            android:id="@+id/txtWithdrawTitleSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="My Saldo"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtWithdrawSaldo"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Rp 5.000.0000,00"
            android:textAlignment="center"
            android:textColor="@color/colorLightOrange"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="visible"
            android:background="#AAA"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="30dp" >

            <EditText
                android:id="@+id/txtWithdrawAmount"
                android:layout_width="341dp"
                android:layout_height="64dp"
                android:ems="10"
                android:inputType="number"
                android:lines="@android:integer/config_longAnimTime"
                android:text="Enter Withdraw Amount"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtWithdrawMinimum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minimal Rp 50.000,00"
                android:textStyle="italic" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="visible"
            android:background="#AAA" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:background="@color/colorGrey"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/txtWithdrawTitlePayment"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Select Payment"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/btnWithdrawPayment1"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:text="BCA - 6042893554" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BNI - 0451827648" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom">

            <Button
                android:id="@+id/BtnWithdrawSubmit"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:text="Withdraw"
                android:textColor="@color/cardview_light_background" />

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>